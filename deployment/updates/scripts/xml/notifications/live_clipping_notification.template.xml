<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<config>
		<serviceUrl>@SERVICE_URL@</serviceUrl>
		<partnerId>-2</partnerId>
		<clientTag>Stand alone php 1.0.0</clientTag>
		<curlTimeout>30</curlTimeout>
		<userAgent>Stand alone php 1.0.0</userAgent>
	</config>
	<session>
        <partnerId>-2</partnerId>
        <secret>@ADMIN_CONSOLE_PARTNER_ADMIN_SECRET@</secret>
        <sessionType>2</sessionType>
    </session>
	<multirequest>
		<request service="eventNotificationTemplate" action="add" plugin="eventNotification" partnerId="0">
			<template objectType="KalturaPushNotificationTemplate">
				<name>LIVE_CLIPPING_PUSH_NOTIFICATIONS</name>
				<systemName>LIVE_CLIPPING_PUSH_NOTIFICATIONS</systemName>
				<description>Push notification template used by the live clipping feature</description>
				<automaticDispatchEnabled>1</automaticDispatchEnabled>
				<eventType>3</eventType> <!-- EventNotificationEventType::OBJECT_CHANGED -->
				<eventObjectType>40</eventObjectType><!-- EventNotificationEventObjectType::ENTRY_SERVER_NODE -->

				<eventConditions objectType="array">
					<item objectType="KalturaEventFieldCondition">
						<description>status_field_modified</description>
						<modifiedColumns>status</modifiedColumns>
						<field objectType="KalturaEvalBooleanField">
							<code>in_array(EntryServerNodePeer::STATUS, $scope->getEvent()->getModifiedColumns())</code>
						</field>
					</item>
					<item objectType="KalturaFieldMatchCondition">
						<description>serverType_Live_Clipping</description>
						<field objectType="KalturaEvalBooleanField">
							<code>($scope->getObject()->getServerType()==2)</code><!-- EntryServerNodeType::LIVE_CLIPPING_TASK -->
						</field>
					</item>
				</eventConditions>
				<queueNameParameters objectType="array">
					<item objectType="KalturaPushEventNotificationParameter">
						<key>entryId</key>
						<description></description>
						<value objectType="KalturaEvalStringField">
							<code>$scope->getObject()->getEntryId()</code>
						</value>
					</item>
				</queueNameParameters>
				<apiObjectType>KalturaClippingTaskEntryServerNode</apiObjectType>
				<objectFormat>1</objectFormat> <!-- KalturaResponseType::RESPONSE_TYPE_JSON -->
			</template>
		</request>
		<request service="eventNotificationTemplate" action="updateStatus" plugin="eventNotification" partnerId="0">
			<id>{1:result:id}</id>
			<status>2</status><!-- EventNotificationTemplateStatus::ACTIVE -->
		</request>
	</multirequest>
</xml>
