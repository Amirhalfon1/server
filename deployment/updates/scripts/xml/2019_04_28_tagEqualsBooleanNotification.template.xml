<?xml version="1.0" encoding="UTF-8"?>
<xml>
    <config>
        <serviceUrl>@SERVICE_URL@</serviceUrl>
        <partnerId>-2</partnerId>
        <clientTag>Stand alone php 1.0.0</clientTag>
        <curlTimeout>30</curlTimeout>
        <userAgent>Stand alone php 1.0.0</userAgent>
    </config>
    <session>
        <partnerId>-2</partnerId>
        <secret>@ADMIN_CONSOLE_PARTNER_ADMIN_SECRET@</secret>
        <sessionType>2</sessionType>
    </session>
    <multirequest>
        <request service="eventNotificationTemplate" action="add" plugin="eventNotification" partnerId="0">
            <template objectType="KalturaBooleanNotificationTemplate">
                <name>Trigger Entry Tag Equals To</name>
                <systemName>BOOLEAN_ENTRY_TAG_EQUALS_TO</systemName>
                <description>Boolean notification template to be sent when an entry tag changed to specific value.</description>
                <automaticDispatchEnabled>1</automaticDispatchEnabled>
                <eventType>3</eventType>
                <!-- EventNotificationEventType::OBJECT_CHANGED -->
                <eventObjectType>1</eventObjectType>
                <!-- EventNotificationEventObjectType::ENTRY -->
                <eventConditions objectType="array">
                    <item objectType="KalturaEventFieldCondition">
                        <description>Tag field modified</description>
                        <field objectType="KalturaEvalBooleanField">
                            <code>$scope->getObject()->isColumnModified(entryPeer::TAGS)</code>
                        </field>
                    </item>
                    <item objectType="KalturaEventFieldCondition">
                        <description>Tags equals</description>
                        <field objectType="KalturaEvalBooleanField">
                            <code>in_array($scope->getDynamicValueByKey("trigger_tag"),array_diff($scope->getObject()->getTagsArr(),explode(',', $scope->getEvent()->getObject()->getColumnsOldValues()['entry.TAGS'])))</code>
                        </field>
                    </item>
                </eventConditions>
                <format>1</format>
                <contentParameters objectType="array">
                    <item objectType="KalturaEventNotificationParameter">
                        <key>entry_id</key>
                        <description>Entry ID</description>
                        <value objectType="KalturaEvalStringField">
                            <code>$scope->getObject()->getId()</code>
                        </value>
                    </item>
                    <item objectType="KalturaEventNotificationParameter">
                        <key>entry_tags</key>
                        <description>Entry tags</description>
                        <value objectType="KalturaEvalStringField">
                            <code>$scope->getObject()->getTags()</code>
                        </value>
                    </item>
                </contentParameters>
                <userParameters objectType="array">
                    <item objectType="KalturaEventNotificationParameter">
                        <key>trigger_tag</key>
                        <description>Entry tag that will trigger</description>
                        <value objectType="KalturaStringValue">
                        </value>
                    </item>
                </userParameters>
            </template>
        </request>
        <request service="eventNotificationTemplate" action="updateStatus" plugin="eventNotification" partnerId="0">
            <id>{1:result:id}</id>
            <status>1</status>
            <!-- EventNotificationTemplateStatus::DISABLED -->
        </request>
    </multirequest>
</xml>